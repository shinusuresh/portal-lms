<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.thoughtservice.portal.user.skills.Skill" table="SKILLS"
		catalog="thoughtservice_portal" lazy="false">

		<id name="id" type="long">
			<column name="SKILLS_ID" />
			<generator class="identity" />
		</id>
		<property name="name" type="string">
			<column name="NAME" length="50" not-null="true" />
		</property>
		<property name="category" type="string">
			<column name="CATEGORY" length="50" not-null="true" />
		</property>
		<property name="description" type="string">
			<column name="DESCRIPTION" length="5000" not-null="false" />
		</property>
		<property name="lastUpdate" type="timestamp">
			<column name="LASTUPDATE_DATE" length="19" />
		</property>
	
	</class>
</hibernate-mapping>