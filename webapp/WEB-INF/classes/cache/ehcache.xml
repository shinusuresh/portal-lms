<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true"
    monitoring="autodetect" dynamicConfig="true">

	<diskStore path="java.io.tmpdir/portalcache"/>
	
	<cache
	    name="org.hibernate.cache.StandardQueryCache"	   
	    eternal="false"
	    timeToLiveSeconds="120"
	    
	    overflowToDisk="true"/>

	<cache
	    name="org.hibernate.cache.UpdateTimestampsCache"	    
	    eternal="true"
	    overflowToDisk="true"/>
    
	<defaultCache eternal="true" maxElementsInMemory="100"
		overflowToDisk="true" />
		
		
		
	<!-- Cache settings per class -->
    <cache name="com.tryzens.portal.user.skills.UserSkills"
        maxElementsInMemory="1000"
        eternal="false"
        timeToIdleSeconds="300"
        timeToLiveSeconds="600"
        overflowToDisk="true"/>
        
    <cache name="com.tryzens.portal.role.Role"
        maxElementsInMemory="1000"
        eternal="false"
        timeToIdleSeconds="300"
        timeToLiveSeconds="600"
        overflowToDisk="true"/>

</ehcache>